version: '3'
services:
  request:
    image: lscr.io/linuxserver/ombi:latest
    container_name: ombi
    environment:
      - PUID={{ var.USER_UID }}
      - PGID={{ var.USER_GID }}
      - TZ={{ var.TZ }}
    volumes:
      - {{ var.INT_DIR }}/Data/ombi:/config
    restart: unless-stopped
    networks:
      - proxy
    labels:
      traefik.enable: true
      traefik.http.routers.ombi.entryPoints: https

networks:
  proxy:
    driver: bridge
    external: true