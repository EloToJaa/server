version: '3'
services:
  auth:
    image: authelia/authelia
    container_name: auth
    volumes:
      - authelia-config:/config
      - {{ var.INT_DIR }}/authelia/configuration.yml:/config/configuration.yml
      - {{ var.INT_DIR }}/authelia/users_database.yml:/config/users_database.yml
    environment:
      - TZ={{ var.TZ }}
    restart: always
    networks:
      - proxy
    labels:
      traefik.enable: true
      traefik.http.routers.auth.entryPoints: https

networks:
  proxy:
    external: true

volumes:
  authelia-config: