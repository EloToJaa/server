version: '3'
services:
  adminer:
    image: adminer
    container_name: adminer
    volumes:
      - {{ var.INT_DIR }}/Stack/adminer/adminer.css:/var/www/html/adminer.css
    networks:
      - proxy
    labels:
      traefik.enable: true
      traefik.http.routers.adminer.entryPoints: https
      traefik.http.routers.adminer.middlewares: auth@file
    restart: unless-stopped

networks:
  proxy:
    driver: bridge
    external: true