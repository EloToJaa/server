version: '3'
services:
  plex-meta-manager:
    image: lscr.io/linuxserver/plex-meta-manager:latest
    container_name: plex-meta-manager
    environment:
      - PUID={{ var.USER_UID }}
      - PGID={{ var.USER_GID }}
      - TZ={{ timezone }}
      - PMM_TIME={{ pmm_time }}
    volumes:
      - pmm-config:/config
    restart: unless-stopped
    networks:
      - proxy

networks:
  proxy:
    external: true

volumes:
  pmm-config: