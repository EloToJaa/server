version: '3'
services:
  uptime:
    image: louislam/uptime-kuma:1
    container_name: uptime
    volumes:
      - {{ var.INT_DIR }}/Config/Uptime-Kuma:/app/data
    security_opt:
      - no-new-privileges:true
    restart: unless-stopped
    networks:
      - proxy
    labels:
      traefik.enable: true
      traefik.http.routers.uptime.entryPoints: https

networks:
  proxy:
    driver: bridge
    external: true