version: '3'
services:
  stats:
    image: lscr.io/linuxserver/tautulli:latest
    container_name: tautulli
    environment:
      - PUID={{ var.USER_UID }}
      - PGID={{ var.USER_GID }}
      - TZ={{ var.TZ }}
      - DOCKER_MODS=ghcr.io/gilbn/theme.park:tautulli
    volumes:
      - {{ var.INT_DIR }}/Data/tautulli:/config
    restart: unless-stopped
    networks:
      - proxy
    labels:
      traefik.enable: true
      traefik.http.routers.tautulli.entryPoints: https

networks:
  proxy:
    driver: bridge
    external: true